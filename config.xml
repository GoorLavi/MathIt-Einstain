<?xml version='1.0' encoding='utf-8'?>
<widget id="com.GoorL.MathIt" version="5.3.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MathIt-Einstein</name>
    <description>
        A great math game that chalanged math skills and knowledge.
	think you have what it takes?
		lets see you einstien.
    </description>
    <author email="Goorlavi1@gmail.com">
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="platforms/android/res/mipmap-xhdpi/icon.png" />
        <allow-intent href="market:*" />
        <preference name="Fullscreen" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
